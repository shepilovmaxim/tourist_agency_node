<div class="add_form">
  <form method="post">
    <div class="add_form_item">
      <label for="email">Email:</label>
      <input type="email" name="email" id="email" class="add_form_field" required>
      <div id="checkEmail"></div>
    </div>
    <div class="add_form_item">
      <label for="login">Login:</label>
      <input type="text" name="login" id="login" pattern="[a-zA-Z][0-9a-zA-Z]*|[а-яА-ЯёЁ][0-9а-яА-ЯёЁ]*" class="add_form_field" required>
      <div id="checkLogin"></div>
    </div>
    <div class="add_form_item">
      <label for="password">Password:</label>
      <input type="password" name="password" id="password" minlength="5" maxlength="20" class="add_form_field" required>
    </div>
    <div class="add_form_item">
      <label for="firstName">First name:</label>
      <input type="text" name="firstName" id="firstName" pattern="[A-Z][a-z]*|[А-ЯЁ][а-яё]*" class="add_form_field" required>
    </div>
    <div class="add_form_item">
      <label for="lastName">Last name:</label>
      <input type="text" name="lastName" id="lastName" pattern="[A-Z][a-z]*|[А-ЯЁ][а-яё]*" class="add_form_field" required>
    </div>
    <div class="add_form_item">
      <label for="phone">Phone number:</label>
      <input type="tel" name="phoneNumber" id="phone" pattern="[0-9]{10}" class="add_form_field" required>
    </div>
    <div class="add_form_item">
      <input type="submit" class="button" value="Sign up">
    </div>
  </form>
  <script src="/checkFormFields.js"></script>
</div>