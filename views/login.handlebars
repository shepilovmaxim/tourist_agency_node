<div class="add_form">
  <form method="post">
    {{> alert }}
    <div class="add_form_item">
      <label for="login">Login:</label>
      <input type="text" name="login" id="login" class="add_form_field" required>
    </div>
    <div class="add_form_item">
      <label for="password">Password:</label>
      <input type="password" name="password" id="password" minlength="5" class="add_form_field" required>
    </div>
    <div class="add_form_item">
      <input type="submit" class="button" value="Log in">
    </div>
  </form>
</div>